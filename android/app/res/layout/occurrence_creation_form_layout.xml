<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >
        
	    <GridLayout
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content" >
	
	        <TextView
	            android:layout_column="0"
	            android:layout_columnSpan="1"
	            android:layout_gravity="left"
	            android:layout_row="0"
	            android:layout_rowSpan="1"
	            android:text="@string/occurrence_creation_form_label_event"
	            android:textAppearance="?android:attr/textAppearanceLarge" />
	
	        <AutoCompleteTextView
	            android:id="@+id/occurrence_creation_form_event_name_text_field"
	            android:layout_column="1"
	            android:layout_gravity="fill_horizontal"
	            android:layout_row="0"
	            android:layout_rowSpan="1"
	            android:ems="10" />
	        
	        <TextView
	            android:layout_column="0"
	            android:layout_columnSpan="1"
	            android:layout_gravity="left"
	            android:layout_row="1"
	            android:layout_rowSpan="1"
	            android:text="@string/occurrence_creation_form_label_event_description"
	            android:textAppearance="?android:attr/textAppearanceLarge" />
	
	        <EditText
	            android:id="@+id/occurrence_creation_form_event_description_text_field"
	            android:layout_column="1"
	            android:layout_gravity="fill_horizontal"
	            android:layout_row="1"
	            android:layout_rowSpan="1"
	            android:inputType="text"
	            android:ems="10" />	        
	
	        <TextView
	            android:layout_column="0"
	            android:layout_columnSpan="1"
	            android:layout_gravity="left"
	            android:layout_row="2"
	            android:layout_rowSpan="1"
	            android:text="@string/occurrence_creation_form_label_venue"
	            android:textAppearance="?android:attr/textAppearanceLarge" />
	
	        <AutoCompleteTextView
	            android:id="@+id/occurrence_creation_form_venue_name_text_field"
	            android:layout_column="1"
	            android:layout_gravity="fill_horizontal"
	            android:layout_row="2"
	            android:layout_rowSpan="1"
	            android:ems="10" />
	        
	        <TextView
	            android:layout_column="0"
	            android:layout_columnSpan="1"
	            android:layout_gravity="left"
	            android:layout_row="3"
	            android:layout_rowSpan="1"
	            android:text="@string/occurrence_creation_form_label_venue_address"
	            android:textAppearance="?android:attr/textAppearanceLarge" />
	
	        <EditText
	            android:id="@+id/occurrence_creation_form_venue_address_text_field"
	            android:layout_column="1"
	            android:layout_gravity="fill_horizontal"
	            android:layout_row="3"
	            android:layout_rowSpan="1"
	            android:inputType="textPostalAddress"
	            android:ems="10" />
	
	    </GridLayout>

	    <TextView
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="@string/occurrence_creation_form_label_date_start"
	        android:textAppearance="?android:attr/textAppearanceLarge" />

	    <CalendarView
	        android:id="@+id/occurrence_creation_form_date_start"
	        android:layout_width="match_parent"
	        android:layout_height="300dp" />

	    <TextView
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="@string/occurrence_creation_form_label_time_start"
	        android:textAppearance="?android:attr/textAppearanceLarge" />

	    <TimePicker
	        android:id="@+id/occurrence_creation_form_time_start"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content" />

	    <TextView
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="@string/occurrence_creation_form_label_date_end"
	        android:textAppearance="?android:attr/textAppearanceLarge" />

        <CalendarView
            android:id="@+id/occurrence_creation_form_date_end"
            android:layout_width="match_parent"
            android:layout_height="300dp" />

	    <TextView
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="@string/occurrence_creation_form_label_time_end"
	        android:textAppearance="?android:attr/textAppearanceLarge" />

        <TimePicker
            android:id="@+id/occurrence_creation_form_time_end"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <Button
                android:id="@+id/occurrence_creation_form_button_post"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/occurrence_creation_form_label_button_post" />

            <Button
                android:id="@+id/occurence_creation_form_button_cancel"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/generic_label_button_cancel" />

        </LinearLayout>
        
    </LinearLayout>
 
</ScrollView>